@model  SmartAdmin.Data.Models.MenuItem
<!-- 弹出窗体form表单 -->
<div id="detailswindow" class="easyui-window"
     title="明细数据"
     data-options="modal:true,
                    closed:true,
                    iconcls:'icon-save',
                    footer:'#windowfooter',
                    onOpen:function(){
                       $(this).window('vcenter');
                    },
                    onRestore:function(){
                      $menuitemsdg.datagrid('resize');
                    },
                    onMaximize:function(){
                      $menuitemsdg.datagrid('resize');
                    }
                    " style="width:840px;height:420px;display:none">
  <!-- begin toolbar -->
  <div class="panel-content py-2 rounded-bottom border-faded border-left-0 border-right-0  text-muted">
    <div class="row m-0">
      <div class="col-sm-8">
        <div class="btn-group btn-group-sm">
          <button name="saveitembutton" onclick="saveitem()" class="btn btn-default">
            <i class="fa fa-floppy-o"></i> 保存
          </button>
        </div>
        <div class="btn-group btn-group-sm" id="deleteitem-btn-group">
          <button onclick="deleteitem()" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>  删除
          </button>
        </div>
         
      </div>
      <div class="col-sm-4 text-align-right">

      </div>
    </div>
  </div>
  <div class="panel-container show">
    <div class="panel-content">
      <form id="menuitem_form"
            class="easyui-form form-horizontal p-1"
            method="post"
            data-options="novalidate:true,
                            onChange: function(target){
                              hook = true;
                              $('button[name*=\'saveitembutton\']').prop('disabled', false);
                             },
                             onLoadSuccess:function(data){
                               hook = false;
                               $('button[name*=\'saveitembutton\']').prop('disabled', true);
                             }">
@Html.AntiForgeryToken()
<!--Primary Key-->
@Html.HiddenFor(model => model.Id)
<fieldset class="form-group">
  <div class="row m-1">
    <label class="col-md-2 form-label text-right text-danger">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Title)"
             name="@Html.NameFor(model => model.Title)"
             value="@Html.ValueFor(model => model.Title)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Title)',
								 required:true,
                                 validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Description)"
             name="@Html.NameFor(model => model.Description)"
             value="@Html.ValueFor(model => model.Description)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Description)',
								 required:false,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-danger text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.LineNum)"
             name="@Html.NameFor(model => model.LineNum)"
             value="@Html.ValueFor(model => model.LineNum)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.LineNum)',
								 required:true,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-danger text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Url)"
             name="@Html.NameFor(model => model.Url)"
             value="@Html.ValueFor(model => model.Url)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Url)',
								 required:true,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-danger text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Controller)"
             name="@Html.NameFor(model => model.Controller)"
             value="@Html.ValueFor(model => model.Controller)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Controller)',
								 required:true,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-danger text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Action)"
             name="@Html.NameFor(model => model.Action)"
             value="@Html.ValueFor(model => model.Action)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Action)',
								 required:true,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.Icon)"
             name="@Html.NameFor(model => model.Icon)"
             value="@Html.ValueFor(model => model.Icon)"
             tabindex="0" required
             class="easyui-textbox"
             style="width:100%"
             type="text"
             data-options="prompt:'@Html.DescriptionFor(model => model.Icon)',
								 required:false,validType: 'length[0,50]'
                                 " />
    </div>
    <label class="col-md-2 form-label text-right ">)</label>
    <div class="col-md-4 mb-1">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input"
               id="@Html.IdFor(model => model.IsEnabled)"
               name="@Html.NameFor(model => model.IsEnabled)"
               value="true" @(Model.IsEnabled ? "checked=\" checked\"" : "" )>
        <label class="custom-control-label" for="@Html.IdFor(model => model.Icon)">)</label>
      </div>

    </div>
    <label class="col-md-2 form-label text-right ">)</label>
    <div class="col-md-4 mb-1">
      <input id="@Html.IdFor(model => model.ParentId)"
             name="@Html.NameFor(model => model.ParentId)"
             value="@Html.ValueFor(model => model.ParentId)"
             tabindex="9"
             style="width:100%"
             class="easyui-combobox"
             data-options="prompt:'@Html.DescriptionFor(model => model.ParentId)' ,
						label:'' ,editable:false,
 						required:false ,
						valueField: 'Id',
						textField:  'Title' ,
						url: '/MenuItems/GetMenuItems' ,
						onSelect: function(item){
						//console.log(item);
				}">


    </div>
  </div>
</fieldset>

</form>
